<?xml version="1.0" encoding="utf-8"?>

<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Issues.ListViewTranslate.Forms.Controls.ActionBarControl"
    HeightRequest="48">

    <StackLayout x:Name="LayoutRoot" Spacing="16" Orientation="Horizontal" BackgroundColor="DarkGray">
        <Button Text="Menu" Command="{Binding MenuCommand}" Margin="16,0,0,0" TextColor="White" />
        <Label Text="{Binding Title}" VerticalOptions="Center" TextColor="White" />
    </StackLayout>
</ContentView>